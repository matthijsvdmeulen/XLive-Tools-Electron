{
  "name": "xlive-tools-electron",
  "productName": "xlive-tools-electron",
  "version": "1.0.0",
  "description": "Electron version of X-Live-Tools, to support directly running ffmpeg",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matthijsvdmeulen/XLive-Tools-Electron.git"
  },
  "author": "Matthijs van der Meulen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/matthijsvdmeulen/XLive-Tools-Electron/issues"
  },
  "main": "electron.js",
  "homepage": "./",
  "dependencies": {
    "electron-is-dev": "^3.0.1",
    "electron-squirrel-startup": "^1.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@rabbitholesyndrome/electron-forge-maker-portable": "^0.2.0",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "concurrently": "^8.2.2",
    "electron": "^28.1.4",
    "electron-devtools-installer": "^3.2.0",
    "luxon": "^3.0.4",
    "node-sass": "^9.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.2.0",
    "web-vitals": "^3.5.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"npm:react\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron-forge start",
    "react": "npm start",
    "package": "react-scripts build && electron-forge package",
    "make": "react-scripts build && electron-forge make"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "ignore": [
          "src",
          "public"
        ],
        "prune": true
      },
      "makers": [
        {
          "name": "@rabbitholesyndrome/electron-forge-maker-portable",
          "config": {
            "appId": "dev.meulen.xlive"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
